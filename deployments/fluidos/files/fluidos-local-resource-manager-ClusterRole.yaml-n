apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  name: fluidos-local-resource-manager
rules:
- apiGroups:
  - ""
  resources:
  - nodes
  verbs:
  - get
  - list
  - watch
- apiGroups:
  - metrics.k8s.io
  resources:
  - pods
  verbs:
  - get
  - list
  - watch
- apiGroups:
  - nodecore.github.com/fluidos-project/
  resources:
  - flavours
  verbs:
  - create
  - delete
  - get
  - list
  - patch
  - update
  - watch
